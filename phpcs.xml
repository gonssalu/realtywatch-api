<?xml version="1.0"?>
<ruleset name="PHP_CodeSniffer">
    <rule ref="PSR12"/>

    <!-- Directories to check -->
    <file>app</file>
    <file>database</file>
    <file>tests</file>
    <file>routes</file>
    <file>config</file>

    <config name="installed_paths" value="vendor/slevomat/coding-standard"/>
    <rule ref="SlevomatCodingStandard.VariableUse.UselessVariable"/>
    <rule ref="SlevomatCodingStandard.Variables.UnusedVariable"/>
</ruleset>
